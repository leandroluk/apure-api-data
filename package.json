{
  "name": "apure-api-data",
  "description": "Apure - Data API",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@jest/types": "29.5.0",
    "@types/express": "4.17.17",
    "@types/express-winston": "4.0.0",
    "@types/jest": "29.5.1",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "20.0.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "commitlint": "17.6.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.0.3",
    "esbuild": "0.17.18",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-node": "29.5.0",
    "lint-staged": "13.2.2",
    "nodemon": "2.0.22",
    "rimraf": "5.0.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "scripts": {
    "build": "esbuild src --outfile=dist/index.js --bundle --minify --platform=node --tree-shaking=true",
    "compose:down": "docker-compose down --remove-orphans",
    "compose:up": "docker-compose up --build --force-recreate",
    "compose:d": "yarn compose -d",
    "compose": "yarn compose:down && yarn compose:up",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node src\"",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "test:staged": "npm test --findRelatedTests",
    "test:ci:i": "yarn test:i -- --coverage",
    "test:ci:u": "yarn test:u -- --coverage",
    "test:ci": "yarn test -- --coverage",
    "test:i": "yarn test -- -c jest.integration.config.ts",
    "test:u": "yarn test -- -c jest.unit.config.ts",
    "test:w": "yarn test -- --watch",
    "test:v": "jest --no-cache --passWithNoTests --runInBand --detectOpenHandles --verbose",
    "test": "jest --no-cache --passWithNoTests --runInBand --detectOpenHandles --silent --noStackTrace"
  },
  "dependencies": {
    "@types/swagger-ui-express": "4.1.3",
    "cpf-cnpj-validator": "^1.0.3",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-winston": "4.2.0",
    "helmet": "7.0.0",
    "joi": "17.9.2",
    "jsonwebtoken": "9.0.0",
    "mongodb": "5.5.0",
    "openapi-types": "12.1.3",
    "swagger-ui-express": "4.6.3"
  }
}